<Page x:Class="IribDiplom.Navigation.enterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IribDiplom.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="#ffbf94">
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="6">
                <TextBlock Text="Введите логин:" Width="140"/>
                <TextBox Name="txblogin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="6">
                <TextBlock Text="Введите пароль:" Width="140"/>
                <PasswordBox Name="psw"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button Name="enterbtn" Content="Войти" Margin="6"  Click="enterbtn_Click"/>
                <Button Name="Registrationbtn" Content="Регистрация" Click="Registrationbtn_Click"/>
            </StackPanel>
        </StackPanel>
      

    </Grid>
</Page>
